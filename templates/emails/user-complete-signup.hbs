{{#> layouts/email_base }}
    {{#* inline "body"}}
        <div class="title">
            <h3>Take 2 minutes to complete your profile in the User Portal so we can generate your report.</h3>
        </div>
        <div class="description">
            <ul>
                <li style="margin-bottom: 7px;">Age, Gender, Height & Weight</li>
                <li style="margin-bottom: 7px;">Phone number for 2 Factor Authentication</li>
                <li style="margin-bottom: 7px;">Your Current Activity Level</li>
                <li>Your Pain Level and where it hurts (if any)</li>
            </ul>
        </div>
        <div class="description">
            <div class="description with-button">
