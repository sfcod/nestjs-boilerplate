{{#> layouts/email_base }}
    {{#* inline "body"}}
        <div class="title">
            <h3>Your movement plan was updated.</h3>
        </div>
        <div class="description"><b>Name:</b> {{routine.name}}</div>
        <div class="description"><b>Period:</b> {{routine.startDate}} - {{routine.endDate}}</div>
        {{#each routine.movements}}
            <div class="block">
                <row>
                    <div class="description">
                        <b>Exercise:</b> {{exercise.name}}
                    </div>
<!--                    <div class="description">-->
<!--                        <b>Body part zones:</b><br/>-->
<!--                        {{#each exercise.exerciseBodyPartZones}}-->
<!--                            {{bodyPartZone.name}}<br/>-->
<!--                        {{/each}}-->
<!--                    </div>-->
                    <div class="description">
                        <b>Duration:</b> {{{seconds_to_readable duration}}}
                    </div>
                    <div class="description">
                        <b>Comment:</b> {{comment}}
                    </div>
                    {{#if exercise.videos}}
                        <div class="description">
                            <b>Videos:</b>
                            {{#each exercise.videos}}
                                <a href="{{video}}">Video {{increment @index}}</a>{{#unless @last}}, {{/unless}}
                            {{/each}}
                        </div>
                    {{/if}}
                </row>
            </div>
        {{/each}}
    {{/ inline}}
{{/ layouts/email_base}}
