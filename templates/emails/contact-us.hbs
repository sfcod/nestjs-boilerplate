{{#> layouts/email_base }}
    {{#* inline "body"}}
        <div class="title">
            <h3>Hello!</h3>
        </div>
        <div class="description">
            Here is a new request from the contact form:
        </div>
        <div class="description">
            <b>Name:</b> {{data.name}}
        </div>
        <div class="description">
            <b>Email:</b> {{data.email}}
        </div>
        <div class="description">
            <b>Company/Size:</b> {{data.company}}
        </div>
        {{#if data.subject}}
            <div class="description">
                <b>Subject:</b> {{data.subject}}
            </div>
        {{/if}}
        {{#if data.industry}}
            <div class="description">
                <b>Industry: </b> {{data.industry}}
            </div>
        {{/if}}
        {{#if data.state}}
            <div class="description">
                <b>State: </b> {{data.state}}
            </div>
        {{/if}}
        {{#if data.phoneNumber}}
            <div class="description">
                <b>Phone Number:</b> {{data.phoneNumber}}
            </div>
        {{/if}}
        <div class="description">
            <b>Signed Up for updates:</b>
            {{#if data.receiveCommunications}}
                <span style="color: green">Yes</span>
            {{else}}
                <span style="color: red">No</span>
            {{/if}}
        </div>
        {{#if data.message}}
            <div class="description">
                <b>Message: </b>
                <div>
                    {{data.message}}
                </div>
            </div>
        {{/if}}
        <br>
        <div class="description">
            Thank you.
        </div>
    {{/ inline}}
{{/ layouts/email_base}}
