<!-- if there is a footer block for given template, then it will be used, otherwise default template will be used -->
<!-- e.g. partials/blocks/therme/footer.hbs -->
{{#if (partial_exists (concat 'blocks/' __template '/footer'))}}
    {{> (concat 'blocks/' (lookup . '__template') '/footer') }}
{{else}}
    {{> blocks/default/footer }}
{{/if}}
